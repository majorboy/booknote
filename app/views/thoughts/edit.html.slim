h1 
  = @book.title

.nav.justify-content-end 
  = link_to 'Back', book_path(@book), class: 'btn btn-info'

= form_for [@book, @thought] do |f|
  .form-group
    = f.label :content, 'Summary'
    = f.text_area :thought, class: 'form-control' ,style: 'width: 100%;height: 100px;', autocomplete: 'off'
  = f.submit nil, class: 'btn btn-info'

